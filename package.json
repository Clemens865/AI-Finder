{
  "name": "intelligent-finder",
  "version": "0.1.0",
  "description": "AI-powered desktop file management application",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "tsc -p tsconfig.main.json && tsc && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "preview": "vite preview",
    "test": "jest --config jest.config.cjs --coverage",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:unit": "jest --config jest.config.cjs --testPathPattern=tests/unit",
    "test:integration": "jest --config jest.config.cjs --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.main.json",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "clean": "rimraf dist coverage .swarm .hive-mind .claude-flow",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Intelligent Finder Team",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "chokidar": "^4.0.3",
    "lucide-react": "^0.454.0",
    "nanoid": "^5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^13.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.10.1",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "csv-stringify": "^6.6.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "exceljs": "^4.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pdf-parse": "^2.4.5",
    "pdfkit": "^0.17.2",
    "postcss": "^8.4.49",
    "prettier": "^3.4.1",
    "prism-react-renderer": "^2.4.1",
    "react-markdown": "^10.1.0",
    "react-window": "^2.2.2",
    "rimraf": "^5.0.5",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.15",
    "tesseract.js": "^6.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.intelligentfinder.app",
    "productName": "Intelligent Finder",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "resources/icon.png"
    }
  }
}
